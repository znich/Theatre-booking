<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Performance" table="PERFORMANCES">
        <id name="id" type="java.lang.Integer" column="PERFORMANCE_ID">
            <generator class="sequence">
                <param name="sequence">PERFORMANCE_SEQ</param>
            </generator>
        </id>
        <property name="startDate" type="java.util.Date" column="START_DATE" />
        <property name="endDate" type="java.util.Date" column="END_DATE" not-null="true" />

        <many-to-one name="category" class="Category" fetch="select" column="CATEGORY_ID" />
        <set name="properties" table="PERFORMANCES_PROPERTIES" lazy="true" cascade="save-update">
            <key column="PERFORMANCE_ID" not-null="true"/>
            <many-to-many class="Property" column="PROPERTY_ID"/>
        </set>
        <set name="events" table="EVENT" inverse="true" fetch="select">
            <key column="EVENT_NAME" not-null="true" />
            <one-to-many class="Event" />
        </set>
    </class>
</hibernate-mapping>