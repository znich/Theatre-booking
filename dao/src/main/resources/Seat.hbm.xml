<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Seat">
        <id name="id">
            <generator class="sequence">
                <param name="sequence">SEAT_SEQ</param>
            </generator>
        </id>
        <property name="priceCategory" not-null="true" />
        <property name="row" not-null="true" />
        <property name="seatNumber" not-null="true" />
        <property name="sector" not-null="true" />

    </class>
</hibernate-mapping>