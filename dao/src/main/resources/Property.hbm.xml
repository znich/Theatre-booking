<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Property" table="PROPERTIES">
        <id name="id" type="java.lang.Integer" column="PROPERTY_ID">
            <generator class="sequence">
                <param name="sequence">PROP_SEQ</param>
            </generator>
        </id>
        <property name="name"  type="int" column="PROPERTY_NAME_ID" not-null="true" />
        <property name="value" type="java.lang.String" column="PROPERTY_VALUE" />
        <property name="parentId"  type="int" column="PARENT_ID" not-null="true" />
        <property name="langId" type="int" column="LANG_ID"  />
        <set name="childProperties" table="PROPERTIES" inverse="true" fetch="select">
            <key column="PARENT_ID" not-null="true" />
            <one-to-many class="Property" />
        </set>
        <many-to-one name="rootProperty" class="Property" fetch="select" column="PARENT_ID" />
    </class>
</hibernate-mapping>