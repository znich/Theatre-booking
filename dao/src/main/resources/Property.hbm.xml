<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Property">
        <id name="id">
            <generator class="sequence">
                <param name="sequence">PROP_SEQ</param>
            </generator>
        </id>
        <property name="name" not-null="true" />
        <property name="value" />
        <property name="langId"  />
        <set name="childProperties" inverse="true" fetch="select">
            <key column="PARENT_ID" not-null="true" />
            <one-to-many class="Property" />
        </set>
        <many-to-one name="rootProperty" class="Property" fetch="select" />
    </class>
</hibernate-mapping>