<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.academy.domain.PaymentMethod" table="PAYMENT_METHOD">
        <id name="id" type="java.lang.Integer" column="METHOD_ID">
            <generator class="sequence">
                <param name="sequence">PM_SEQ</param>
            </generator>
        </id>
        <property name="name"  type="java.lang.String" column="METHOD_VALUE" not-null="true" />
        <property name="langId" type="int" column="LANG_ID" not-null="true" />
        <property name="pid"  type="int" column="PARENT_ID" not-null="true" />
    </class>
</hibernate-mapping>