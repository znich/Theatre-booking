<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="User" table="USERS">
        <id name="id" type="java.lang.Integer" column="USER_ID">
            <generator class="sequence">
                <param name="sequence">USER_SEQ</param>
            </generator>
        </id>
        <property name="email"  type="java.lang.String" column="EMAIL" not-null="true" unique="true"></property>
        <property name="password" type="java.lang.String" column="PASSWORD" not-null="true"></property>
        <set name="booking" table="BOOKING" inverse="true" fetch="select">
            <key column="BOOKING_ID" not-null="true"/>
            <one-to-many class="Booking" />
        </set>
        <set name="properties" table="USERS_PROPERTIES" lazy="true" cascade="save-update">
            <key column="USER_ID" not-null="true" />
            <many-to-many class="Property" column="PROPERTY_ID" />
        </set>
    </class>
</hibernate-mapping>