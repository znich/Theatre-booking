<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.academy.domain.Category" table="CATEGORY">
        <id name="id" type="int" column="CATEGORY_ID">
            <generator class="sequence">
                <param name="sequence">CATEGORY_SEQ</param>
            </generator>

        </id>
        <property name="name" type="string" column="CATEGORY_VALUE"></property>
        <property name="pid"  type="int" column="PARENT_ID"></property>
        <property name="langId" type="int" column="LANG_ID"></property>
    </class>
</hibernate-mapping>