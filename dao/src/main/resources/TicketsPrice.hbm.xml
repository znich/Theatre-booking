<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="TicketsPrice">
        <id name="id">
            <generator class="sequence">
                <param name="sequence">TICKETS_PRICE_SEQ</param>
            </generator>
        </id>
        <property name="priceCategory" />
        <property name="price" />
        <many-to-one name="perfId" class="Performance" fetch="select" column="PERFORMANCE_ID" />
    </class>
</hibernate-mapping>