<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="TicketsPrice" table="TICKETS_PRICE">
        <id name="id" type="java.lang.Integer" column="TICKETS_PRICE_ID">
            <generator class="sequence">
                <param name="sequence">TICKETS_PRICE_SEQ</param>
            </generator>
        </id>
        <property name="priceCategory" type="java.lang.String" column="CATEGORY_VALUE" />
        <property name="price"  type="int" column="PARENT_ID" />
        <many-to-one name="perfId" class="Performance" fetch="select" column="PERFORMANCE_ID" />
    </class>
</hibernate-mapping>