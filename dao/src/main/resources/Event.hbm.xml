<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Event">
        <id name="id">
            <generator class="sequence">
                <param name="sequence">EVENT_SEQ</param>
            </generator>
        </id>
        <property name="startTime" not-null="true" />
        <property name="endTime" not-null="true" />
        <many-to-one name="performance" class="Performance" fetch="select" />

        <set name="tickets" inverse="true" fetch="select">
            <key column="TICKET_EVENT_ID" not-null="true" />
            <one-to-many class="Ticket" />
        </set>
    </class>
</hibernate-mapping>