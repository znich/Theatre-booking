<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Event" table="EVENT">
        <id name="id" type="java.lang.Integer" column="EVENT_ID">
            <generator class="sequence">
                <param name="sequence">EVENT_SEQ</param>
            </generator>
        </id>
        <property name="startTime"  type="java.util.Calendar" column="EVENT_START_TIME" not-null="true" />
        <property name="endTime" type="java.util.Calendar" column="EVENT_END_TIME" not-null="true" />
        <many-to-one name="performance" class="Performance" fetch="select" column="EVENT_NAME" />

        <set name="tickets" table="ALL_EVENT_TICKETS" inverse="true" fetch="select">
            <key column="TICKET_EVENT_ID" not-null="true" />
            <one-to-many class="Ticket" />
        </set>
    </class>
</hibernate-mapping>