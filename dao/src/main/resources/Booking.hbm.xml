<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Booking" table="BOOKING">
        <id name="id" type="java.lang.Integer" column="BOOKING_ID">
            <generator class="sequence">
                <param name="sequence">BOOKING_SEQ</param>
            </generator>
        </id>
        <property name="madeDate" type="java.util.Calendar" column="BOOKING_MADE_DATE" not-null="true"/>
        <property name="expDate" type="java.util.Calendar" column="BOOKING_EXPIRATION_DATE" not-null="true"/>
        <many-to-one name="paymentMethod" class="PaymentMethod" fetch="select" column="BOOKING_PAYMENT_METHOD"/>
        <many-to-one name="user" class="by.academy.domain.User" fetch="select" column="USER_ID"/>
        <set name="tickets" table="ALL_EVENT_TICKETS" inverse="true" fetch="select">
            <key column="EVENT_ID" not-null="true"/>
            <one-to-many class="by.academy.domain.Ticket"/>
        </set>
    </class>
</hibernate-mapping>