<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.domain">
    <class name="Status" table="TICKET_STATUS">
        <id name="id" type="java.lang.Integer" column="STATUS_ID">
            <generator class="sequence">
                <param name="sequence">TICKET_SEQ</param>
            </generator>
        </id>

        <property name="value"  type="java.lang.String" column="STATUS_VALUE" />
        <property name="langId" type="int" column="LANG_ID" />
        <property name="pid" type="int" column="PARENT_ID" />
        <set name="tickets" table="ALL_EVENT_TICKETS" inverse="true" fetch="select">
            <key column="STATUS_ID" not-null="true"/>
            <one-to-many class="Ticket" />
        </set>
    </class>
</hibernate-mapping>